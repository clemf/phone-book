<h1>Contacts:</h1>

<ul>

  <% @contacts.each do |contact| %>

    <li><%= contact.name %>sgdf</li>

  <% end %>

</ul>

<form action="/add_contact" method="post">
  <div class="form-group">
    <label for="name" class="sr-only">Enter contact name:</label>
    <input id="name" name="name" type="text" placeholder="Name" class="form-control">
  </div>
  <div class="form-group">
    <label for="home" class="sr-only">Enter home phone:</label>
    <input id="home" name="home" type="text" placeholder="Home phone number" class="form-control">
  </div>
  <div class="form-group">
    <label for="cell" class="sr-only">Enter cell phone:</label>
    <input id="cell" name="cell" type="text" placeholder="Cell phone number" class="form-control">
  </div>
  <button type="submit" class="btn btn-default">Add Contact</button>
</form>
